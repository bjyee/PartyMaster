<h1><% title "My Invitations" %></h1>

<table class="datagrid">
  <thead class="datagrid">
    <th>Party</th>
    <th>Guest</th>
    <th>Expected Attendees</th>
	<th>&nbsp;</th>
  </thead>
  <% for invitation in @invitations %>
    <tr class="<%= cycle('dg_list_line_odd', 'dg_list_line_even') %>">
      <td><%= link_to invitation.party.name, invitation_path(invitation) %></td>
      <td><%= link_to invitation.guest.name, invitation_path(invitation) %></td>
      <td><%= invitation.expected_attendees %></td>
      <td align="center">
	  <% if can? :update, invitation %>
		<%= link_to "Edit", edit_invitation_path(invitation) %>
	  <% end %>
	  <% if can? :destroy, invitation %>
		<%= link_to "Destroy", invitation, :confirm => 'Are you sure?', :method => :delete %>
	  <% end %>
	  </td>
    </tr>
  <% end %>
</table>

<span class="smtext">
<%= will_paginate @invitations, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

<p>
	<%= link_to "Add A New Invitation", new_invitation_path(invitation) %>
</p>
<p>
	<%= link_to "RSVP", rsvp_path %>
</p>
